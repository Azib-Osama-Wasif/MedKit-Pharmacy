<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_button"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_button"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_foreground"
            app:civ_border_color="@color/dark_green"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Medicine Name"
            android:textColor="@color/dark_green"
            android:textSize="18dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainLayout"
        android:layout_marginTop="20dp"
        android:text="Detail"
        android:textColor="@color/dark_green"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/straight2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/straight_line"
        android:background="@color/dark_green"
        android:layout_below="@+id/title_detail"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:id="@+id/secondary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_detail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/productDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Name"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name_val2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/name"
                    android:text="name"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/type"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_val2"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Type"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/type_val"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_val2"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/type"
                    android:text="Capsule"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/type_val"
                    android:layout_marginRight="5dp"
                    android:text="Description"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_val"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/type_val"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/description"
                    android:text="fgggggggggggggggggggggggggggggggggd"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_val"
                    android:layout_marginRight="5dp"
                    android:text="Expiry Date"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_val"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_val"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/description"
                    android:text="date"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/manufacturer"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_val"
                    android:layout_marginRight="5dp"
                    android:text="Manufacturer"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/manufacturer_val"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_val"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/description"
                    android:text="manufacturer"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/manufacturer_val"
                    android:layout_marginRight="5dp"
                    android:text="Price"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price_val"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/manufacturer_val"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/description"
                    android:text="1500"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>