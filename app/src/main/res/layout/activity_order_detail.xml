<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">


            <Button
                android:id="@+id/confirm_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainLayout"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:text="RECEIVED"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/waiting_dispatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainLayout"
                android:layout_centerHorizontal="false"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="AWAITING DISPATCH"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:civ_border_color="@color/dark_green"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/name_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Product Name"
                    android:textColor="@color/dark_green"
                    android:textSize="18dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/title_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/waiting_dispatch"
                android:layout_marginTop="20dp"
                android:text="Order Detail"
                android:textColor="@color/dark_green"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/straight"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/straight_line"
                android:background="@color/dark_green"
                android:layout_below="@+id/title_order_detail"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                android:id="@+id/orderDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/straight"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/dateLeft"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Date"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_val"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/dateLeft"
                    android:text="Feb 22,2022"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/amountLeft"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateLeft"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Amount"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount_val"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_val"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/amountLeft"
                    android:text="1500"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/statusLeft"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amountLeft"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Status"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/status_val"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount_val"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/statusLeft"
                    android:text="ABC"
                    android:textColor="@color/dark_green"
                    android:textSize="16dp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderDetailLayout"
                android:layout_marginTop="20dp"
                android:text="Medicine Detail"
                android:textColor="@color/dark_green"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/straight2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/straight_line"
                android:background="@color/dark_green"
                android:layout_below="@+id/title_detail"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/secondary_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_detail"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/productDetailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Name"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/name_val2"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/name"
                        android:text="name"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/type"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_val2"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Type"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/type_val"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_val2"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/type"
                        android:text="Capsule"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/description"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/type_val"
                        android:layout_marginRight="5dp"
                        android:text="Description"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description_val"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/type_val"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/description"
                        android:text="fgggggggggggggggggggggggggggggggggd"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description_val"
                        android:layout_marginRight="5dp"
                        android:text="Expiry Date"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/exp_date_val"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description_val"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/description"
                        android:text="date"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/manufacturer"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/exp_date_val"
                        android:layout_marginRight="5dp"
                        android:text="Manufacturer"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/manufacturer_val"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/exp_date_val"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/description"
                        android:text="manufacturer"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/manufacturer_val"
                        android:layout_marginRight="5dp"
                        android:text="Price"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price_val"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/manufacturer_val"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/description"
                        android:text="1500"
                        android:textColor="@color/dark_green"
                        android:textSize="16dp" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>