<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/filtertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Medicine Type"
            android:textColor="@color/dark_green"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/cd"
            android:src="@drawable/ic_cart_green"
            android:text="In Bucket: "
            android:textSize="14sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_green"
            app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/cartNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="8dp"
                android:layout_alignParentRight="true"
                android:text="10"

                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>



        <RelativeLayout
            android:id="@+id/radio_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filtertext"
            android:layout_marginBottom="10dp">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:checked="true"
                    android:contentDescription="No Filter Applied"
                    android:onClick="updateFromRadio"
                    android:text="All" />

                <RadioButton
                    android:id="@+id/tablets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:onClick="updateFromRadio"
                    android:text="@string/type_tablets" />

                <RadioButton
                    android:id="@+id/syrups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="updateFromRadio"
                    android:text="@string/type_syrups" />

                <RadioButton
                    android:id="@+id/capsules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="updateFromRadio"
                    android:text="@string/type_capsules" />

            </RadioGroup>

            <ImageView
                android:id="@+id/itemIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/straight2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/itemIcon"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/dark_green"
                android:src="@drawable/straight_line" />

        </RelativeLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress"
            style="@style/SpinKitView.Large.FadingCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/dark_green" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/items_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/finish"
            android:layout_below="@id/radio_buttons" />

        <Button
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/dark_green"
            android:text="Next"
            android:textColor="@color/white" />


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>